<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ManualEntryActivity">

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="263dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Select Date" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="237dp"
        android:layout_height="64dp"

        android:layout_below="@id/dateEditText"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="9dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:hint="Select Time" />

    <EditText
        android:id="@+id/durationEditText"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="206dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Duration"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/distanceEditText"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="203dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:hint="Distance"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/caloriesEditText"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="121dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Calories"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/heartRateEditText"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caloriesEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="245dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Heart Rate"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heartRateEditText"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Comment"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentEditText"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:onClick="onSaveClick"
        android:text="Save" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentEditText"

        android:layout_gravity="center_horizontal"
        android:layout_marginStart="69dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/saveButton"
        android:onClick="onCancelClick"
        android:text="Cancel" />
</RelativeLayout>
